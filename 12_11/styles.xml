<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/lavenderblue</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_row">0</item>
        <item name="android:layout_columnSpan">3</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_column">0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_input">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_column">1</item>
        <item name="android:ems">10</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_columnSpan">3</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">@color/lavenderblue</item>

    </style>


</resources>